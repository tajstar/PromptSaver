{
  "manifest_version": 2,
  "name": "PromptSaver",
  "version": "1.0",
  "description": "Save and paste prompts easily",
  "icons": {
    "48": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "PromptSaver"
  },
  "permissions": [
    "clipboardWrite",
    "storage",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ]
}